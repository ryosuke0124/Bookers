<header>
 <h1>Books</h1>
</header>
  <h4>Title</h4>
  <% @books.each do |book| %>
    <%= book.title %>
    <%= book.body %>
    <%= link_to "show", book_path(book) %>
    <%= link_to "edit", edit_book_path(book) %>
    <%= link_to "delete", book_path(book), method: :delete %>
  <% end %>

 <h1>New book</h1>
  <%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>

<% end %>