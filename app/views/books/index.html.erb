<header>
 <h1>Books</h1>
</header>
  <h4>Title</h4>
  <% @books.each do |book| %>
  <%= book.title %>
  <%= book.body %>
  <% end %>

 <h1>New book</h1>
  <%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>
  
<% end %>